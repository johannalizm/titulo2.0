
<link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<%= stylesheet_link_tag "registro.css" %>
<body>
<br />
<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
<div class="container" style="padding-top: 100px;">
    <div class="col-md-3"></div>
    <div class="col-md-6">
         <div class="row myborder">
             <h4 style=" font-family:'Buenard', serif; padding-top: 30px; color: #72c02c; margin: initial; margin-bottom: 10px; font-size: 30pt; text-align:center;">Reenviar Correo de Confirmaci√≥n</h4>
            <div class="input-group margin-bottom-20" style="padding-top: 30px;">
                <span class="input-group-addon" ><i class="glyphicon glyphicon-user mycolor"></i></span>
                <%= f.email_field :email, autofocus: true, autocomplete: "email",class: 'form-control',placeholder:'nombre@institucion.com' ,value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %></div>
            <div class="row">
                <div class="col-md-12" style="padding-top: 30px;">
                    <button class="btn-u pull-left" type="submit">Enviar</button>
                </div>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>
<% end %>
</body>
