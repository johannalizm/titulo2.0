<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<%= stylesheet_link_tag "mostrar.css" %>
<%= javascript_include_tag "mostrarins", "data-turbolinks-track" => true  %>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.6/lumen/bootstrap.min.css">
<link rel="stylesheet" href="https://daneden.github.io/animate.css/animate.min.css">
<body>

<div class="container" style="margin-top:20px;">
<div class="row">
<div id="user" class="col-md-12" >
  <div class="panel panel-table animated slideInDown" style="background-color: #E0FFFF" >
   <div class="panel-heading " style="padding:10px;">
     <div class="col col-xs-8 text-center">
            <p class="panel-title" style="font-size: 50pt" >Instituciones Adscritas</p>
        </div>
    </div>
   <div class="panel-body">
     <div class="tab-content">
      <div role="tabpanel" class="tab-pane active" id="list">
       <table class="table table-striped table-bordered table-list">
        <thead>
         <tr>
            <th class="avatar">Logo </th>
            <th>Nombre</th>
            <th>Tipo de Institución</th>
            <th>País</th>
            <th><em class="fa fa-cog"></em></th>
          </tr>
         </thead>
         <tbody>
            <% @instituciones.each do |institucione| %>
            <tr class="ok">
            <td class="avatar"><img src="<%= institucione.avatar%>"></td>
            <td><%= institucione.nombre %></td>
            <td><%= institucione.tipoinstitucione.nombre %></td>
            <td><%= institucione.region.paise.nombre %></td>
            <td align="center">
               <a><%= link_to 'Mostrar Datos ', institucione %></a>
               <a><%= link_to 'Editar', edit_institucione_path(institucione) %></a>
               <a><%= link_to 'Eliminar', institucione, method: :delete, data: { confirm: 'Esta seguro que desea eliminar esta institución?' } %></a>
             </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div><!-- END id="list" -->
      </div>
       </div>
      </div>
      </div><!-- END id="thumb" -->
     </div><!-- END tab-content -->
    </div>
  </div><!--END panel-table-->
</div>
</div>
</div>
</body>
